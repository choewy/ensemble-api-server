{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "paths": {
      "@apps/admin": ["apps/admin/src"],
      "@apps/admin/*": ["apps/admin/src/*"],
      "@apps/client": ["apps/client/src"],
      "@apps/client/*": ["apps/client/src/*"],
      "@apps/stream": ["apps/stream/src"],
      "@apps/stream/*": ["apps/stream/src/*"],
      "@libs/typeorm": ["libs/typeorm/src"],
      "@libs/typeorm/*": ["libs/typeorm/src/*"],
      "@libs/health": ["libs/health/src"],
      "@libs/health/*": ["libs/health/src/*"],
      "@libs/logger": ["libs/logger/src"],
      "@libs/logger/*": ["libs/logger/src/*"],
      "@libs/entity": ["libs/entity/src"],
      "@libs/entity/*": ["libs/entity/src/*"],
      "@libs/bootstrap": ["libs/bootstrap/src"],
      "@libs/bootstrap/*": ["libs/bootstrap/src/*"],
      "@libs/testing": ["libs/testing/src"],
      "@libs/testing/*": ["libs/testing/src/*"],
      "@libs/docs": ["libs/docs/src"],
      "@libs/docs/*": ["libs/docs/src/*"],
      "@libs/configs": ["libs/configs/src"],
      "@libs/configs/*": ["libs/configs/src/*"],
      "@libs/jwt": ["libs/jwt/src"],
      "@libs/jwt/*": ["libs/jwt/src/*"],
      "@libs/redis": ["libs/redis/src"],
      "@libs/redis/*": ["libs/redis/src/*"],
      "@libs/kafka": ["libs/kafka/src"],
      "@libs/kafka/*": ["libs/kafka/src/*"],
      "@libs/common": ["libs/common/src"],
      "@libs/common/*": ["libs/common/src/*"],
      "@libs/event": ["libs/event/src"],
      "@libs/event/*": ["libs/event/src/*"]
    }
  }
}
