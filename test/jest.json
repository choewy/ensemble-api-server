{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "..",
  "testRegex": "test/.*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "src/(.*)$": "<rootDir>/src/$1",
    "^@libs/(.*)$": "<rootDir>/src/libs/$1",
    "^@domains/(.*)$": "<rootDir>/src/domains/$1",
    "^@entities/(.*)$": "<rootDir>/src/entities/$1"
  }
}